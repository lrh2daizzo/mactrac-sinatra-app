<div class="msg" style="color: green; float: right;">
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
</div>


<h4><%= @meal.name %> Meal </h4>
<br>
<p><%= @meal.calories %> Calories </p>
<p><%= @meal.carbohydrates %>(g) Carbohydrates </p>
<p><%= @meal.protein %>(g) Protein </p>
<p><%= @meal.fat %>(g) Fat </p>
<br>

<a href="/meals/<%= @meal.id %>/edit">Edit Meal</a>
<br></br>
<a href="/meals"> All Meals </a>
<br></br>

<%# creates a delete button to delete meal %>
<form method="post" action="/meals/<%=@meal.id%>/delete">
<input id="hidden" type="hidden" name="_method" value="DELETE">
<input type="submit" value="Delete Meal">
</form>